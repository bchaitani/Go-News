<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ProgressStyle">
        <item name="android:layout_width">@dimen/progress_size</item>
        <item name="android:layout_height">@dimen/progress_size</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">@dimen/image_size</item>
        <item name="android:layout_height">@dimen/image_size</item>
    </style>

    <style name="MessageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:background">@drawable/shape_rounded_primary_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>